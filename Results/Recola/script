#!/bin/bash

echo "test"

observables="number_jet invariant_mass_mjj12 transverse_momentum_j1 transverse_momentum_j2 rapidity_j1 rapidity_j2 invariant_mass_epmu zeppenfeld_zep zeppenfeld_zmup"
#observables="number_jet"

order="born"
#order="nlo"

for obs in $observables
do

echo histogram_${obs}_${order}.dat

#awk '{if(substr($1, 0, 1)=="#"){ print $0 } else {print $1,$2,$4,$5; print $1,$3,$4,$5}}' histogram_${obs}_${order}.dat > histogram_${obs}_${order}.dat.tmp

awk '!/#/' histogram_${obs}_${order}.dat > histogram_${obs}_${order}.dat.tmp2
awk '{print $2,$3,$4,$5}' histogram_${obs}_${order}.dat.tmp2 > histogram_${obs}_${order}_final.dat

mv histogram_${obs}_${order}_final.dat ../LO/histogram_${obs}_${order}.dat 
#mv histogram_${obs}_${order}_final.dat ../NLO/histogram_${obs}_${order}.dat 

rm histogram_${obs}_${order}.dat.tmp2

#cp histogram_${obs}_${order}.dat NLO

done;
